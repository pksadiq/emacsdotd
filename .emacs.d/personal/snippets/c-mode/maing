# -*- mode: snippet -*-
# name: main function for Gtk
# key: m.g
# condition: (progn (gnome-c-style-mode 1) t)
# --
#include <gtk/gtk.h>
#include "${1:$(downcase (get-first (str-to-style yas-text "snake")))}-application.h${0:$$(progn (unless (file-exists-p (concat (downcase (get-first gnome-package)) "-application.h")) (write-region "" nil (concat (downcase (get-first gnome-package)) "-application.h"))) (my-read-only-mode))}"

int
main(int    argc,
char **argv)
{
  ${1:GtkApplication$(str-to-style yas-text "upcamel")} *app;
  int status;

  app = ${1:$(setq gnome-package (str-to-style yas-text "snake"))}_new ($2);
  status = g_application_run (G_APPLICATION (app), argc, argv);
  g_object_unref (app);

  return status;
}
