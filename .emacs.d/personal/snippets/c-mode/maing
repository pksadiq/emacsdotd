# -*- mode: snippet -*-
# name: main function for Gtk
# key: maing.
# condition: (progn (gnome-c-style-mode 1) t)
# --
#include <gtk/gtk.h>
#include "${1:$(downcase (get-first (str-to-style "snake" yas-text)))}-application.h$0"

int
main(int  argc,
char *argv[])
{
  ${1:GtkApplication$(str-to-style "upcamel" yas-text)} *app;
  int status;

  app = ${1:$(str-to-style "snake" yas-text)}_new ($2);
  status = g_application_run (G_APPLICATION (app), argc, argv);
  g_object_unref (app);

  return status;
}
