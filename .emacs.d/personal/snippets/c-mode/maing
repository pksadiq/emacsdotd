# -*- mode: snippet -*-
# name: main function for Gtk
# key: maing.
# --
#include <gtk/gtk.h>
${1:$(let ((temp (downcase (get-first (str-to-style "snake" yas-text)))))
         (setq temp (concat temp "-application.h"))
           (concat "#include \042"  temp "\042"))
}

int
main(int  argc,
char *argv[])
{
  ${1:gtk application$(str-to-style "upcamel" yas-text)} *app;
  int status;

  app = ${1:$(str-to-style "snake" yas-text)}_new ($2);
  status = g_application_run (G_APPLICATION (app), argc, argv);
  g_object_unref (app);

  return status;
}
